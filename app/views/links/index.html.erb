<% @links.each do |link| %>
  <div class="link row">

  <div class="votes">
      <div class="arrow up">
        <%= link_to like_link_path(link), method: :put,:remote => true, class: "btn btn-default btn-sm" do %>
            <i class="fa fa-arrow-up fa-2x" aria-hidden="true" ></i>
            <!-- <%= link.get_upvotes.size %> -->
          <% end %>
      </div>
      <div class="score" title="12K">
          <%= number_to_human(link_score(link), :units => {:thousand => "K"},:format =>"%n%u",:precision => 4)  # => "500 K"
           %>
      </div>
      <div class="arrow down">
        <%= link_to dislike_link_path(link), method: :put,:remote => true, class: "btn btn-default btn-sm" do %>
            <i class="fa fa-arrow-down fa-2x" aria-hidden="true"></i>
            <!-- <%= link.get_downvotes.size %> -->
          <% end %>
      </div>
  </div>
  <div class="title">
      <%= link_to link.title, link %><br>
      <small class="author">Submitted <%= time_ago_in_words(link.created_at) %> by 
      <%= link_to link.user.name, link.user %>
      </small>
  </div>
    
    
  </div>
<% end %>